WORKDIR = `pwd`

CC = gcc
CXX = g++
AR = ar
LD = g++
WINDRES = windres

INC = -I../engine/include -I../dependencies/glm/include -Iinclude
CFLAGS = -Wall -std=c++11 -fexceptions
RESINC = 
LIBDIR = 
SRCDIR = src
SRCDIR_TEST = test
SRC = $(wildcard $(SRCDIR)/*.cpp)
SRC_TEST = $(wildcard $(SRCDIR_TEST)/*.cpp)
LIB = -lengine
LDFLAGS = 

INC_DEBUG = $(INC) -I../engine/
CFLAGS_DEBUG = $(CFLAGS) -g
RESINC_DEBUG = $(RESINC)
RCFLAGS_DEBUG = $(RCFLAGS)
LIBDIR_DEBUG = $(LIBDIR) -L../engine/bin/Debug
LIB_DEBUG = $(LIB)
LDFLAGS_DEBUG = $(LDFLAGS)
OBJDIR_DEBUG = obj/Debug
DEP_DEBUG = 
OUT_DEBUG = bin/Debug/client

INC_RELEASE = $(INC) -I../engine/
CFLAGS_RELEASE = $(CFLAGS) -O2
RESINC_RELEASE = $(RESINC)
RCFLAGS_RELEASE = $(RCFLAGS)
LIBDIR_RELEASE = $(LIBDIR) -L../engine/bin/Release
LIB_RELEASE = $(LIB)
LDFLAGS_RELEASE = $(LDFLAGS) -s
OBJDIR_RELEASE = obj/Release
DEP_RELEASE = 
OUT_RELEASE = bin/Release/client

OBJ_DEBUG = $(patsubst $(SRCDIR)/%.cpp,$(OBJDIR_DEBUG)/%.o,$(SRC))
OBJ_RELEASE = $(patsubst $(SRCDIR)/%.cpp,$(OBJDIR_RELEASE)/%.o,$(SRC))

LD_LIBRARY_PATH_TEST = ../engine/bin/Debug
OBJDIR_TEST = obj/Test
OUTDIR_TEST = bin/Test/test

OBJ_TEST_TMP = $(patsubst $(SRCDIR_TEST)/%.cpp,$(OBJDIR_TEST)/%.o,$(SRC_TEST))
OBJ_TEST_TMP += $(patsubst $(SRCDIR)/%.cpp,$(OBJDIR_DEBUG)/%.o,$(SRC))
OBJ_TEST = $(filter-out $(OBJDIR_DEBUG)/main.o,$(OBJ_TEST_TMP))
OBJ_DEBUG = $(patsubst $(SRCDIR)/%.cpp,$(OBJDIR_DEBUG)/%.o,$(SRC))
OBJ_RELEASE = $(patsubst $(SRCDIR)/%.cpp,$(OBJDIR_RELEASE)/%.o,$(SRC)) 


all: debug release test

clean: clean_debug clean_release

before_debug: 
	test -d bin/Debug || mkdir -p bin/Debug
	test -d $(OBJDIR_DEBUG) || mkdir -p $(OBJDIR_DEBUG)

after_debug: 

debug: before_debug out_debug after_debug

out_debug: before_debug $(OBJ_DEBUG) $(DEP_DEBUG)
	$(LD) $(LIBDIR_DEBUG) -o $(OUT_DEBUG) $(OBJ_DEBUG)  $(LDFLAGS_DEBUG) $(LIB_DEBUG)

$(OBJDIR_DEBUG)/%.o : $(SRCDIR)/%.cpp
	$(CXX) $(CFLAGS_DEBUG) $(INC) -c $< -o $@

clean_debug: 
	rm -f $(OBJ_DEBUG) $(OUT_DEBUG)
	rm -rf $(OBJDIR_DEBUG)

before_release: 
	test -d bin/Release || mkdir -p bin/Release
	test -d $(OBJDIR_RELEASE) || mkdir -p $(OBJDIR_RELEASE)

after_release: 

release: before_release out_release after_release

out_release: before_release $(OBJ_RELEASE) $(DEP_RELEASE)
	$(LD) $(LIBDIR_RELEASE) -o $(OUT_RELEASE) $(OBJ_RELEASE)  $(LDFLAGS_RELEASE) $(LIB_RELEASE)

$(OBJDIR_RELEASE)/%.o : $(SRCDIR)/%.cpp
	$(CXX) $(CFLAGS_RELEASE) $(INC) -c $< -o $@

clean_release: 
	rm -f $(OBJ_RELEASE) $(OUT_RELEASE)
	rm -rf $(OBJDIR_RELEASE)

test: after_test
 
before_test:
	test -d $(OBJDIR_TEST) || mkdir -p $(OBJDIR_TEST)
	test -d bin/Test || mkdir -p bin/Test
 
out_test: before_debug before_test $(OBJ_TEST)
	$(LD) $(OBJ_TEST) -o $(OUTDIR_TEST) $(LDFLAGS_DEBUG) $(LIBDIR_DEBUG) $(LIB)
 
after_test: out_test
	LD_LIBRARY_PATH=$(LD_LIBRARY_PATH_TEST) ./$(OUTDIR_TEST) HEADLESS
 
clean_test:
	rm -rf $(OUTDIR_TEST)
	rm -rf $(OBJDIR_TEST)
 
$(OBJDIR_TEST)/%.o : $(SRCDIR_TEST)/%.cpp
	$(CXX) $(CFLAGS_DEBUG) $(INC) -c $< -o $@

.PHONY: before_debug after_debug clean_debug before_release after_release clean_release before_test after_test clean_test

